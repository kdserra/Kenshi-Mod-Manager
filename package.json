{
  "name": "kenshi-mod-manager",
  "version": "0.1.0",
  "description": "Tool to manage your mods for Kenshi.",
  "main": "./dist/main.js",
  "scripts": {
    "clean": "rd /s /q dist && rd /s /q release",
    "copy": "node ./tools/copy-distribution-files.js",
    "build": "npm run clean && tsc && npm run copy",
    "release": "npm run build && electron-builder",
    "start": "npm run build && electron .",
    "dev": "npm run build && concurrently \"tsc -w\" \"electron .\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kdserra/Kenshi-Mod-Manager.git"
  },
  "keywords": [
    "kenshi",
    "mod",
    "manager"
  ],
  "author": "kdserra",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kdserra/Kenshi-Mod-Manager/issues"
  },
  "homepage": "https://github.com/kdserra/Kenshi-Mod-Manager#readme",
  "devDependencies": {
    "electron": "^21.2.0",
    "electron-builder": "^23.6.0",
    "typescript": "^4.8.4"
  },
  "build": {
    "appId": "com.kdserra.kenshi-mod-manager",
    "productName": "Kenshi Mod Manager",
    "files": [
      "dist",
      "node_modules",
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  },
  "dependencies": {
    "electron-reload": "^2.0.0-alpha.1"
  }
}
